<Page x:ConnectionId='1'
    x:Class="VoetbalTeamsApp.Views.MatchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VoetbalTeamsApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
    xmlns:models="using:VoetbalTeamsApp.Models"
    xmlns:telerikGrid="using:Telerik.UI.Xaml.Controls.Grid"
    xmlns:dataCore="using:Telerik.Data.Core"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <RelativePanel>
            <CommandBar x:ConnectionId='2' x:Name="commandBar" DefaultLabelPosition="Right">
                <AppBarButton x:ConnectionId='30'
                                                                             
                                                             
                    Icon="Add"
                    Label="Create new match"
                    />
                <AppBarButton x:ConnectionId='31'
                                                                              
                                                       
                    Icon="ShowResults"
                    Label="Show Matches"
                    />
            </CommandBar>

            <GridView x:ConnectionId='3'                                                          RelativePanel.Below="commandBar"                                                          >
                <GridView.ItemTemplate>
                    <DataTemplate                          >
                        <Grid x:ConnectionId='23' Padding="5">
                            <Grid.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:ConnectionId='24' Grid.Column="0" Width="140"                                          />
                            <TextBlock x:ConnectionId='25' Grid.Column="1" Width="20" TextAlignment="Right"                                             />
                            <TextBlock Grid.Column="2" Width="20" TextAlignment="Center" Text="-"/>
                            <TextBlock x:ConnectionId='26' Grid.Column="3" Width="20" TextAlignment="Left"                                              />
                            <TextBlock x:ConnectionId='27' Grid.Column="4" Width="140"                                          />
                            <Button x:ConnectionId='28'    Margin="0,0,5,0" Grid.Column="5" FontSize="20" Content="Show"                            />
                            <Button x:ConnectionId='29'    Grid.Column="6" FontSize="20" Content="Delete"                              />
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>


            <Grid x:ConnectionId='4' RelativePanel.Below="commandBar" x:Name="ClubBar" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True"                                                           >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="54*"/>
                    <ColumnDefinition Width="499*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="553*"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:ConnectionId='18' Grid.Column="0"
                        Header="HomeClub"
                                                                                                                                
                        DisplayMemberPath="Name"
                                                                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="2" Margin="0,0,0,19"/>

                <TextBlock x:ConnectionId='19' MinWidth="60"                                                                    Grid.Column="2" FontSize="40" TextAlignment="Center" Margin="0,0,0,19"/>

                <TextBlock Text="-" Padding="20,0,20,5" Grid.Column="3" FontSize="35" Margin="0,0,0,19"/>

                <TextBlock x:ConnectionId='20' MinWidth="60"                                                                    Grid.Column="4" FontSize="40" TextAlignment="Center" Margin="0,0,0,19"/>

                <ComboBox x:ConnectionId='21' Grid.Column="5"
                        Header="AwayClub"
                                                                                                                                
                        DisplayMemberPath="Name"
                                                                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,19"/>
            </Grid>






            <Grid x:ConnectionId='5' RelativePanel.Below="ClubBar" x:Name="Grid" ColumnSpacing="5"                                                           >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- HOMEGRID -->

                <Grid x:ConnectionId='6' x:Name="HomeGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="60" Width="19*"/>
                        <ColumnDefinition Width="127*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <telerikGrid:RadDataGrid x:ConnectionId='13'
                        AutoGenerateColumns="False"
                        Grid.Row="1"
                        Grid.ColumnSpan="5"
                        GroupPanelPosition="Left"
                        x:Name="HomeGoals"
                        BorderThickness="5"
                        GridLinesVisibility="None"
                        UserGroupMode="Disabled"
                        UserFilterMode="Disabled"
                        UserEditMode="Inline"
                                                                                      
                                                                                                                                >
                        <telerikGrid:RadDataGrid.Columns>
                            <telerikGrid:DataGridTextColumn PropertyName="Minute"  CanUserEdit="False" SizeMode="Auto"/>
                            <telerikGrid:DataGridTextColumn PropertyName="ScorerId"  CanUserEdit="False" SizeMode="Auto"  />
                            <telerikGrid:DataGridTextColumn PropertyName="Scorer.LastName"  CanUserEdit="False" SizeMode="Stretch" />
                        </telerikGrid:RadDataGrid.Columns>
                        <telerikGrid:RadDataGrid.SortDescriptors>
                            <dataCore:PropertySortDescriptor PropertyName="Minute"/>
                        </telerikGrid:RadDataGrid.SortDescriptors>
                    </telerikGrid:RadDataGrid>

                    <ComboBox x:ConnectionId='14' Grid.Column="0" Grid.Row="2"
                    HorizontalAlignment="Stretch"
                    Header="Player"
                    Margin="0,0,16,0"
                                                                                                                         
                    DisplayMemberPath="LastName"
                                                                                                Grid.ColumnSpan="2" VerticalAlignment="Center"/>

                    <TextBox x:ConnectionId='15' Grid.Column="2" Grid.Row="2"
                    Header="Minute"
                    Margin="0,8,0,8"
                                                                                                                  />

                    <AppBarButton x:ConnectionId='16' Grid.Column="3" Grid.Row="2"
                                                          
                    Icon="Add"
                    Label="Add Home goal" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <AppBarButton x:ConnectionId='17' Grid.Column="4" Grid.Row="2"
                                                             
                    Icon="Delete"
                    Label="Delete Home Goal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>

                <!-- AwayGrid -->

                <Grid x:ConnectionId='7' x:Name="AwayGrid" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="60" Width="264*"/>
                        <ColumnDefinition Width="157*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <telerikGrid:RadDataGrid x:ConnectionId='8' Grid.Row="1"
                        AutoGenerateColumns="False"
                        Grid.Column="0"
                        Grid.ColumnSpan="5"
                        GroupPanelPosition="Left"
                        x:Name="AwayGoals"
                        BorderThickness="5"
                        GridLinesVisibility="None"
                        UserGroupMode="Disabled"
                        UserFilterMode="Disabled"
                        UserEditMode="Inline"
                                                                                      
                                                                                           >
                        <telerikGrid:RadDataGrid.Columns>
                            <telerikGrid:DataGridTextColumn PropertyName="Minute"  CanUserEdit="False" SizeMode="Auto"/>
                            <telerikGrid:DataGridTextColumn PropertyName="ScorerId"  CanUserEdit="False" SizeMode="Auto"  />
                            <telerikGrid:DataGridTextColumn PropertyName="ScorerName"  CanUserEdit="False" SizeMode="Stretch" />
                        </telerikGrid:RadDataGrid.Columns>
                        <telerikGrid:RadDataGrid.SortDescriptors>
                            <dataCore:PropertySortDescriptor PropertyName="Minute"/>
                        </telerikGrid:RadDataGrid.SortDescriptors>
                    </telerikGrid:RadDataGrid>

                    <ComboBox x:ConnectionId='9' Grid.Column="0" Grid.Row="2"
                        Header="Player"
                        Margin="0,0,16,0"
                                                                                                                             
                        DisplayMemberPath="LastName"
                                                                                                   
                        HorizontalAlignment="Stretch" Grid.ColumnSpan="2" VerticalAlignment="Center"/>

                    <TextBox x:ConnectionId='10' Grid.Column="2" Grid.Row="2"
                        Header="Minute"
                        Margin="0,8,0,8"
                                                                                                                       HorizontalAlignment="Left"/>

                    <AppBarButton x:ConnectionId='11' Grid.Column="3" Grid.Row="2"
                                                              
                        Icon="Add"
                        Label="Add Home goal" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <AppBarButton x:ConnectionId='12' Grid.Column="4" Grid.Row="2"
                                                                 
                        Icon="Delete"
                        Label="Delete away goal" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                </Grid>
            </Grid>
        </RelativePanel>
    </Grid>
</Page>

